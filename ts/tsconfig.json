{
	"compilerOptions": {
		// Modules
		"baseUrl": ".",
		"module": "commonjs",
		"moduleResolution": "node",
		"paths": {
			"@gnop/*": [
				"./src/*"
			],
			"@sangervasi/common/*": [
				"node_modules/@sangervasi/common/dist/*"
			],
		},

		// Syntax
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],

		// Output
		"outDir": "dist",

		// General
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES6",
	},
	"include": [
		"src"
	],
}